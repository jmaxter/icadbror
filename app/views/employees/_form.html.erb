<%= form_for @employee do |f| %>
 
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2>
        There are <%= pluralize(@employee.errors.count, "error") %>:
      </h2>
      <ul>
        <% @employee.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :empno %><br>
    <%= f.text_field :empno %>
  </p>
  
  <p>
    <%= f.label :empname %><br>
    <%= f.text_field :empname %>
  </p>
  
  <p>
    <%= f.label :department %><br>
    <%= f.text_field :department %>
  </p>
  
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  
  <p>
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
 
<% end %>