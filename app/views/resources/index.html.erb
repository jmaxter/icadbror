<h1>ICADB - Resources</h1>
<%= link_to 'Home', controller: 'welcome' %> |
<%= link_to 'New resource', new_resource_path %>

<table>
  <tr>
    <th>Resno</th>
    <th>Resname</th>
    <th>Rate</th>
    <th colspan="2"></th>
  </tr>
 
  <% @resources.each do |resource| %>
    <tr>
      <td><%= resource.resno %></td>
      <td><%= resource.resname %></td>
      <td><%= resource.rate %></td>
      <td><%= link_to 'Show', resource_path(resource) %></td>
      <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
      <td><%= link_to 'Destroy', resource_path(resource),
              method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>